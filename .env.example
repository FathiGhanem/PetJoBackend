# Environment
ENVIRONMENT=development

# Project Settings
PROJECT_NAME=PetJo API
VERSION=0.1.0
API_V1_STR=/api/v1

# Database Configuration
POSTGRES_DB=petjo
POSTGRES_USER=petjo_user
POSTGRES_PASSWORD=change_this_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
DATABASE_URL=postgresql+asyncpg://petjo_user:change_this_password@localhost:5433/petjo

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Admin User (Initial Superuser)
FIRST_SUPERUSER_EMAIL=admin@petjo.com
FIRST_SUPERUSER_PASSWORD=change_this_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Cache
CACHE_ENABLED=true
CACHE_TTL=300

# =============================================================================
# CLOUDFLARE R2 STORAGE CONFIGURATION
# =============================================================================

# Storage Provider: "r2" for Cloudflare R2, "local" for development
STORAGE_PROVIDER=r2

# Cloudflare R2 Credentials
# Get these from: Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=petjo-images

# Cloudflare R2 Public URL
# Option 1: R2.dev subdomain (free, auto-generated)
R2_PUBLIC_URL=https://pub-abc123xyz.r2.dev
# Option 2: Custom domain with Cloudflare CDN (recommended for production)
# R2_PUBLIC_URL=https://images.petjo.com

# Local Storage (for development only - used when STORAGE_PROVIDER=local)
LOCAL_STORAGE_URL=http://localhost:8000/uploads

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Google OAuth
# Web application client ID from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
