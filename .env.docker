# Environment
ENVIRONMENT=development

# Project Settings
PROJECT_NAME=PetJo API
VERSION=0.1.0
API_V1_STR=/api/v1

# Database Configuration (Docker)
POSTGRES_DB=petjo
POSTGRES_USER=petjo_user
POSTGRES_PASSWORD=petjo_password
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://petjo_user:petjo_password@db:5432/petjo

# Redis Configuration (Docker)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=dev-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# Admin User (Initial Superuser)
FIRST_SUPERUSER_EMAIL=admin@petjo.com
FIRST_SUPERUSER_PASSWORD=changethis

# Logging
LOG_LEVEL=INFO
LOG_FILE=

# Cache
CACHE_ENABLED=true
CACHE_TTL=300

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60
